{
  "name": "greeflas/php-project-stat",
  "description": "Simple CLI tool that provides different information about PHP project.",
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Vladimir Kuprienko",
      "email": "vldmr.kuprienko@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "symfony/console": "^4.2",
    "symfony/finder": "^4.2",
    "phpdocumentor/reflection-docblock": "^4.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.13"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix --allow-risky=yes"
  }
}
